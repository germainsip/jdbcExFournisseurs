<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="menuPane" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.afpa.gui.MenuController">
    <children>
      <ImageView fitHeight="42.0" fitWidth="39.0" pickOnBounds="true" preserveRatio="true" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
         <image>
            <Image url="@img/logoPeter.png" />
         </image>
      </ImageView>
      <VBox alignment="CENTER" layoutX="30.0" layoutY="86.0" spacing="50.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
              <Label styleClass="title" text="Menu de Papyrus">
                  <font>
                      <Font size="48.0" />
                  </font>
              </Label>
            <HBox alignment="CENTER" spacing="30.0">
               <children>
                    <Button fx:id="commandeButton" mnemonicParsing="false" onAction="#handleButtonCommande" text="Commandes" textFill="WHITE">
                        <font>
                            <Font size="24.0" />
                        </font>
                     <effect>
                        <InnerShadow />
                     </effect>
                    </Button>
                    <Button fx:id="fournisButton" mnemonicParsing="false" onAction="#handleButtonFournisseurs" text="Fournisseurs" textFill="WHITE">
                        <font>
                            <Font size="24.0" />
                        </font>
                     <effect>
                        <InnerShadow />
                     </effect>
                    </Button>
                  <Button fx:id="fournisAddButton" layoutX="240.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleButtonAddFournisseurs" text="Ajouter  un fournisseur" textAlignment="CENTER" textFill="WHITE" wrapText="true">
                     <font>
                        <Font size="24.0" />
                     </font>
                     <effect>
                        <InnerShadow />
                     </effect>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
         </padding>
      </VBox>
    </children>
</AnchorPane>
