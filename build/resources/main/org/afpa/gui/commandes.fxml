<AnchorPane stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.afpa.gui.CommandeController">
    <children>
      <VBox layoutX="80.0" layoutY="29.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button fx:id="menuButton" mnemonicParsing="false" onAction="#handleButtonMenu" textFill="WHITE">
                     <graphic>
                        <FontIcon iconColor="WHITE" iconLiteral="fas-arrow-left" iconSize="32" />
                     </graphic>
                  </Button>
                    <Label styleClass="title" text="Liste des commandes">
                        <font>
                            <Font size="36.0" />
                        </font>
                    </Label>
                    <ComboBox fx:id="listeFouCombo" onAction="#handleBoxSelectionFournis" prefHeight="42.0" prefWidth="265.0" promptText="Choisissez un fournisseur" styleClass="button">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </ComboBox>
               </children>
            </HBox>
            <ScrollPane fx:id="scrollOne" hbarPolicy="NEVER" prefHeight="241.0" style="-fx-background-color: white;" vbarPolicy="NEVER">
               <content>
                  <VBox fx:id="scroll" alignment="CENTER" prefHeight="0.0" prefWidth="660.0" spacing="20.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding></VBox>
               </content>
               <effect>
                  <InnerShadow />
               </effect>
            </ScrollPane>
         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
      </VBox>
    </children>
</AnchorPane>
